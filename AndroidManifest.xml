<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amrak.gradebook"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.READ_CALENDAR" >
    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_CALENDAR" >
    </uses-permission>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomTheme" >
        <activity
            android:name="com.amrak.gradebook.Settings"
            android:label="@string/title_activity_settings" >
            <intent-filter>
                <action android:name="com.amrak.gradebook.SETTINGS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amrak.gradebook.Terms"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.amrak.gradebook.Courses"
            android:label="@string/titleCourses" >
            <intent-filter>
                <action android:name="com.amrak.gradebook.COURSES" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amrak.gradebook.Categories"
            android:label="Categories" >
            <intent-filter>
                <action android:name="com.amrak.gradebook.CATEGORIES" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amrak.gradebook.Evaluations"
            android:label="@string/titleEvaluations" >
            <intent-filter>
                <action android:name="com.amrak.gradebook.EVALUATIONS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amrak.gradebook.AddTerm"
            android:label="@string/title_activity_add_term" >
            <intent-filter>
                <action android:name="com.amrak.gradebook.ADDTERM" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amrak.gradebook.AddCourse"
            android:label="@string/title_activity_add_course"
            android:windowSoftInputMode="stateVisible|adjustResize" >
            <intent-filter>
                <action android:name="com.amrak.gradebook.ADDCOURSE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amrak.gradebook.AddCategory"
            android:label="@string/title_activity_add_category" >
            <intent-filter>
                <action android:name="com.amrak.gradebook.ADDCAT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amrak.gradebook.AddEval"
            android:label="@string/title_activity_add_evaluation" >
            <intent-filter>
                <action android:name="com.amrak.gradebook.ADDEVAL" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amrak.gradebook.TaskList"
            android:label="@string/title_activity_task_list" >
            <intent-filter>
                <action android:name="com.amrak.gradebook.TASKLIST" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amrak.gradebook.AddTask"
            android:label="@string/title_activity_add_task" >
            <intent-filter>
                <action android:name="com.amrak.gradebook.ADDTASK" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.amrak.gradebook.CustomSuggestionProvider"
            android:authorities="com.amrak.gradebook.CustomSuggestionProvider"
            android:enabled="true"
            android:exported="false" >
        </provider>
    </application>

</manifest>