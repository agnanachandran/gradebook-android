<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amrak.gradebook"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.amrak.gradebook.Splash"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amrak.gradebook.Cover"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.amrak.gradebook.COVER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amrak.gradebook.Settings"
            android:label="@string/title_activity_settings" >
            <intent-filter>
                <action android:name="com.amrak.gradebook.SETTINGS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amrak.gradebook.Terms"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.amrak.gradebook.TERMS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amrak.gradebook.Courses"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.amrak.gradebook.COURSES" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amrak.gradebook.Categories"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.amrak.gradebook.CATEGORIES" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amrak.gradebook.Evaluations"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.amrak.gradebook.EVALUATIONS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amrak.gradebook.AddTerm"
            android:label="@string/title_activity_add_term" >
            <intent-filter>
                <action android:name="com.amrak.gradebook.ADDTERM" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amrak.gradebook.AddCourse"
            android:label="@string/title_activity_add_course"
            android:windowSoftInputMode="stateVisible|adjustResize" >
            <intent-filter>
                <action android:name="com.amrak.gradebook.ADDCOURSE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amrak.gradebook.AddCategory"
            android:label="@string/title_activity_add_category" >
            <intent-filter>
                <action android:name="com.amrak.gradebook.ADDCAT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amrak.gradebook.AddEval"
            android:label="@string/title_activity_add_evaluation" >
            <intent-filter>
                <action android:name="com.amrak.gradebook.ADDEVAL" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>