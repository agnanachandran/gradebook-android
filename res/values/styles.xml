<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- the theme applied to the application or activity -->

    <style name="CustomTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/CustomTheme.ActionBar</item>
       
    </style>
    
    <!-- style for the action bar background -->

    <style name="CustomTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
         <item name="android:textColor">@color/Grey</item>
         <item name="android:background">#159CEB</item>
    </style>
    
    <style name="search_heading">
        <item name="android:textSize">22sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">#0099CC</item>
    </style>
    
    <style name="search_listitem">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#5C5C5C</item>
    </style>

</resources>