<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="2"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/tvEvalChildWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textWeight"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvEvalChildDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textDate"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvEvalChildCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textCategory"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/tvEvalChildWeightValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textWeight"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvEvalChildDateValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textDate"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvEvalChildCategoryValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textCategory"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>